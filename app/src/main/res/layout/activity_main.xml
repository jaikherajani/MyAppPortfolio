<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jaikh.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="My Nanodegree Apps!" />

    <Button
        android:id="@+id/app1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/app1"
        android:background="#F08C35"
        android:layout_marginTop="20dp"
        android:onClick="display"/>

    <Button
        android:id="@+id/app2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/app2"
        android:background="#F08C35"
        android:layout_marginTop="20dp"
        android:onClick="display"/>

    <Button
        android:id="@+id/app3"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/app3"
        android:background="#F08C35"
        android:layout_marginTop="20dp"
        android:onClick="display"/>

    <Button
        android:id="@+id/app4"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/app4"
        android:background="#F08C35"
        android:layout_marginTop="20dp"
        android:onClick="display"/>

    <Button
        android:id="@+id/app5"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/app5"
        android:background="#F08C35"
        android:layout_marginTop="20dp"
        android:onClick="display"/>

    <Button
        android:id="@+id/app6"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/app6"
        android:background="#E53935"
        android:layout_marginTop="20dp"
        android:onClick="display"/>
</LinearLayout>
</ScrollView>